parse-statement roundtrip
SELECT id, fname, lname FROM tablefoo WHERE id = 1 LIMIT 5
----
SELECT id, fname, lname FROM tablefoomv WHERE id = 1 LIMIT 5

parse-statement roundtrip
SELECT count(employee.*) FROM "tablefoo" JOIN employee ON "tablefoo".employee = employee.id
----
SELECT count(employee.*) FROM tablefoomv JOIN employee ON tablefoomv.employee = employee.id

parse-statement roundtrip
SELECT * FROM tablefoo LEFT JOIN (SELECT * FROM "order" WHERE "order".customer = tablefoo.id LIMIT 3) AS "order" ON true
----
SELECT * FROM tablefoomv LEFT JOIN (SELECT * FROM "order" WHERE "order".customer = tablefoomv.id LIMIT 3) AS "order" ON true

parse-statement roundtrip
SELECT * FROM tablefoo AS OF now()
----
SELECT * FROM tablefoomv AS OF now()
